  color:#2DABE5;
}

.line {
  height:5px;
  background:rgba(230,230,230,1);
}

.record-cells {
   background-color: #FFFFFF;
   line-height: 10px;
   font-size: 15px;
   height:40px;
   overflow: hidden;
   position: relative;
}

.record-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.record-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
          transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}

.record-cell {
  padding-top:12px;
  padding-left:25px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: left;
  -webkit-align-items: left;
          align-items: left;
}


.cellimg {
   float:left;
   margin-right:20px;
}

.celltext {
   float:left;
   margin-top:1px;
   width:70%;
}

.celltext-st {
